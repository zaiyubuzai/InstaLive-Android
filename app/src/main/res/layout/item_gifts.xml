<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/giftImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="@dimen/dimen_14dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:src="@mipmap/ic_live_gift_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/giftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:gravity="center"
            android:textColor="#dddde8"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftImage"
            tools:text="100000 Coins" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_14dp"
            app:layout_constraintTop_toBottomOf="@+id/giftName"/>

        <TextView
            android:id="@+id/rewardsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:background="@drawable/bg_36cfc9_4c"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:paddingHorizontal="@dimen/dimen_6dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="x 1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>